rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == userId || 
         request.auth.token.email in ['izafantin26@gmail.com', 'juniedu9@gmail.com', 'josepsouza@escola.pr.gov.br']);
      allow create: if request.auth != null && 
        request.auth.token.email in ['izafantin26@gmail.com', 'juniedu9@gmail.com', 'josepsouza@escola.pr.gov.br'];
    }
    
    // Regras para notícias - podem ser lidas por todos (incluindo não autenticados para homepage)
    match /news/{newsId} {
      allow read: if true; // Permite leitura pública
      allow write: if request.auth != null && 
        request.auth.token.email in ['izafantin26@gmail.com', 'juniedu9@gmail.com', 'josepsouza@escola.pr.gov.br'];
    }
    
    // Regras para eventos - podem ser lidos por todos (incluindo não autenticados para homepage)
    match /events/{eventId} {
      allow read: if true; // Permite leitura pública
      allow write: if request.auth != null && 
        request.auth.token.email in ['izafantin26@gmail.com', 'juniedu9@gmail.com', 'josepsouza@escola.pr.gov.br'];
    }
    
    // Regras para atividades - apenas admins
    match /activities/{activityId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['izafantin26@gmail.com', 'juniedu9@gmail.com', 'josepsouza@escola.pr.gov.br'];
    }
  }
}